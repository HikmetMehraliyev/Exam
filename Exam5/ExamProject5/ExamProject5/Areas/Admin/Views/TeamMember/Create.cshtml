@using ExamProject5.Areas.Admin.ViewModels
@model CreateMemberVM
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <div asp-validation-summary="ModelOnly"></div>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control">
                        <label asp-for="Name">Name</label>
                        <span asp-validation-for="Name"> </span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Surname" class="form-control">
                        <label asp-for="Surname">Surname</label>
                        <span asp-validation-for="Surname"> </span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Profession" class="form-control">
                        <label asp-for="Profession">Profession</label>
                        <span asp-validation-for="Profession"> </span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Description" class="form-control">
                        <label asp-for="Description">Description</label>
                        <span asp-validation-for="Description"> </span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Photo">Photo</label>
                        <input asp-for="Photo" class="form-control bg-dark">
                        <span asp-validation-for="Photo"> </span>
                    </div>
                    <button type="submit" class="btn btn-outline-light">Create</button>

                </form>
            </div>
        </div>
    </div>
</div>

